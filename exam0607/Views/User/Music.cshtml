
@{
    ViewBag.Title = "Music";
}

<h2>音符查詢</h2>

@using (Html.BeginForm("Music", "User", FormMethod.Post))
{
    <p>
        <label for="name">姓名：</label>
        <input type="text" name="name" id="name" required/>
    </p>
    <p>
        <label for="number">數字：</label>
        <input type="text" name="number" id="number" min="1" max="7"/>
    </p>
    <input type="submit" value="查詢" />
}
<p>@ViewBag.Result</p>

